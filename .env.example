INITIAL_HEARTBEATS=86400
HEARTBEAT_INTERVAL_MS=1000
JOURNAL_EVERY_N_BEATS=600

# ═══ API Server ═══
PORT=3333

# ═══ Twitter/X (optional — enables tweet posting) ═══
# X_API_KEY=your-api-key
# X_API_SECRET=your-api-secret
# X_ACCESS_TOKEN=your-access-token
# X_ACCESS_SECRET=your-access-secret

# ═══ Physical Mail (optional — enables death letters via USPS) ═══
# LOB_API_KEY=test_your-lob-key
# RECIPIENT_NAME=Your Name
# RECIPIENT_LINE1=123 Main St
# RECIPIENT_CITY=Your City
# RECIPIENT_STATE=TX
# RECIPIENT_ZIP=79925

# ═══ Voice (optional — experimental) ═══
ENABLE_VOICE=false
